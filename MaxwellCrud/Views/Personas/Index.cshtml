@model IEnumerable<MaxwellCrud.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

<h1>Todos los registros</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonaNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonaDate)
            </th>
            <th>
                Acciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.PersonaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonaNombre)
            </td>
            <td>
                    @{ string currentDate = item.PersonaDate.ToString("dd/MMM/yyyy").ToUpper(); }
                    @currentDate
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonaId" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PersonaId" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonaId" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
